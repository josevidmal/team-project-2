  <div class="row justify-content-center">
  <div class="login-card col-xl-8">
    <div class="card mb-4">
    <h2 class="page-title card-header text-center">If you don't have an account, create one <a href="/signup">Here</a> </h2>
     <div class="card-body">

       <div class="container-fluid h-custom">
    <div class="row d-flex justify-content-center align-items-center h-100">

      <div class="col-md-8 col-lg-6 col-xl-5">
        <div class=" d-flex align-items-center gradient-custom-2">
              <div class="text-dark">
                <h2 class="mb-4">About us</h2>
                <p class="small mb-0">We are a group of Motorcycle thusiasts located in Mexico, join us for a ride today!</p>
              </div>
            </div>
             </div>
         <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">


          <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
            <p class="lead fw-normal mb-0 me-3"><h2>Login </h2></p>
          </div>
            <!-- Email input -->

         <form class="form login-form" id="user-login">
          <div class="form-outline mb-4">
             <label class="form-label" for="email-login">Email:</label>
            <input type="email" id="email-login" class="form-control form-input form-control-lg"
              placeholder="Email" />
          </div>

          <!-- Password input -->
          <div class="form-outline mb-3">
             <label class="form-label" for="password-login">Password:</label>
            <input type="password" id="password-login" class="form-control form-input form-control-lg"
              placeholder="Password" />
          </div>

         <div class="form-group">
        <button id="login-btn" class="btn btn-primary btn-lg"
        style="padding-left: 2.5rem; padding-right: 2.5rem;" type="submit">login</button>
