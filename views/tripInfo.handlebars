{{!-- INFO FOR EACH TRIP/SINGLE --}}
<section class="trip-info projects" id="projects" style="margin-top: 0%; ">
    <h1 style="text-align: center; font-size: 2.3rem;">{{trip_name}}</h1>
    <div class="trip-image">
        <img src="/images/{{trip_image}}" alt="{{trip_name}}">
    </div>
    <div class="trip-briefing">
        <ul style="text-align: center;">
            <li>Destination: {{destination}}</li>
            <li>Date: {{format_date trip_date}}</li>
            <li>Trip Hours: {{trip_hours}}</li>
            <li>Trip Days: {{trip_days}}</li>
            <li>Trip Distance: {{trip_kms}} km</li>
            <li>Toll Cost: ${{toll_cost}} MXN</li>
            <li>Fuel Cost: ${{fuel_cost}} MXN</li>
            <li>Food Cost: ${{food_cost}} MXN</li>
            <li>Hotel Cost: ${{hotel_cost}} MXN</li>
            <li>Difficulty: Level {{difficulty_level}} Trip</li>
        </ul>
    </div>
    <button  class="btn btn-primary btn-lg" id="enroll-btn" style="padding-left: 2.5rem; padding-right: 2.5rem; margin-left: 40%;">Enroll</button>
</section>

<script src="/js/enrollToTrip.js"></script>